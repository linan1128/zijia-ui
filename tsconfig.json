{
  "compilerOptions": {
    "target": "es6",
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "noLib": false,
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "declaration": false,
    "removeComments": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**/__tests__", "dist/**"]
}
